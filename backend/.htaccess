# Enable URL rewriting
RewriteEngine On

# Set the base directory
RewriteBase /site_fitness/backend/

# Allow direct access to real files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle API requests - allows for cleaner URLs
RewriteRule ^api/v1/(.*)$ api/$1 [L]

# Enable CORS
<IfModule mod_headers.c>
    # Allow requests from development server and other origins
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
    
    # Handle OPTIONS method for CORS preflight requests
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
